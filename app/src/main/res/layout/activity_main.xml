<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <Button
        android:text="POPULAR MOVIES"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/popularMoviesButton"
        android:layout_below="@+id/titleTextView"
        android:background="#2E3D49"
        android:textColor="#FAFAFA"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="popularMovies"/>

    <Button
        android:text="STOCK HAWK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/stockHawkButton"
        android:layout_below="@+id/popularMoviesButton"
        android:background="#2E3D49"
        android:textColor="#FAFAFA"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="stockHawk"/>
    <Button
        android:text="BUILD IT BIGGER"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildItBiggerButton"
        android:layout_below="@+id/stockHawkButton"
        android:background="#2E3D49"
        android:textColor="#FAFAFA"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="buildItBigger"/>
    <Button
        android:text="MAKE YOUR APP MATERIAL"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/makeYourAppMaterialButton"
        android:layout_below="@+id/buildItBiggerButton"
        android:background="#2E3D49"
        android:textColor="#FAFAFA"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="makeYourAppMaterial"/>
    <Button
        android:text="GO UBIQUITOUS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/goUbiquitousButton"
        android:layout_below="@+id/makeYourAppMaterialButton"
        android:background="#2E3D49"
        android:textColor="#FAFAFA"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="goUbiquitous"/>
    <Button
        android:text="CAPSTONE"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/capstoneButton"
        android:layout_below="@+id/goUbiquitousButton"
        android:background="#2E3D49"
        android:textColor="#FAFAFA"
        android:layout_centerHorizontal="true"
        android:onClick="capstone"/>

</RelativeLayout>
